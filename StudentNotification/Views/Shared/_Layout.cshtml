@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewData["Title"] — Student Notification System</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            /* Midnight Blue Cinematic Gradient */
            background: linear-gradient(135deg, #0F2027, #203A43, #2C5364);
            background-size: 200% 200%;
            animation: gradientMotion 12s ease infinite;
            color: white;
            overflow-x: hidden;
        }

        /* Animate the cinematic gradient */
        @@keyframes gradientMotion {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        /* Cinematic Glass Panel */
        .glass-panel {
            margin-top: 40px;
            margin-left: auto;
            margin-right: auto;
            width: 90%;
            padding: 40px;
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.08); /* Softer glass */
            backdrop-filter: blur(18px); /* Slightly lower blur for sharper UI */
            box-shadow: 0 15px 35px rgba(0,0,0,0.55); /* Cinematic shadow */
            transition: 0.3s;
        }

            .glass-panel:hover {
                transform: scale(1.01);
                box-shadow: 0 20px 45px rgba(0,0,0,0.7);
            }

        /* Navbar cinematic */
        .navbar-custom {
            background: rgba(255, 255, 255, 0.07);
            backdrop-filter: blur(12px);
            padding: 20px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid rgba(255,255,255,0.15);
        }

        .navbar-title {
            font-size: 28px;
            font-weight: 600;
            letter-spacing: 1px;
            text-shadow: 0 0 12px rgba(255,255,255,0.5);
        }

        .navbar-icons i {
            font-size: 22px;
            margin-left: 15px;
            cursor: pointer;
            transition: 0.3s ease;
            color: #bcd8f3;
        }

            .navbar-icons i:hover {
                transform: scale(1.2);
                color: #ffffff;
                text-shadow: 0 0 12px rgba(255,255,255,0.8);
            }

        /* Fade content animation */
        .content-area {
            animation: fadeIn 1.4s ease;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(35px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>

    <!-- Top Cinematic Navbar -->
    <div class="navbar-custom">
        <div class="navbar-title">@ViewData["Title"]</div>

        <div class="navbar-icons">
            <a href="/"><i class="fa-solid fa-house"></i></a>
            <a href="/Students"><i class="fa-solid fa-users"></i></a>
            <a href="/Notifications"><i class="fa-solid fa-bell"></i></a>
        </div>
    </div>

    <!-- Cinematic Glass Content Panel -->
    <div class="glass-panel content-area">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
